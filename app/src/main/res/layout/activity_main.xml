<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sauca.filgps.Main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal"
            android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:id="@+id/IB_Back"
            android:src="@drawable/ico_gps"
            android:background="#00ffffff"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:id="@+id/IB_FOpen"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_set_as"
            android:layout_toLeftOf="@+id/IB_FSave"
            android:layout_alignWithParentIfMissing="false" />

        <ImageButton
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:id="@+id/IB_FSave"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_save"
            android:layout_centerInParent="true" />

        <ImageButton
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:id="@+id/IB_Map"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_mapmode"
                android:layout_toRightOf="@+id/IB_FSave" />

        <ImageButton
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:id="@+id/IB_Quit"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_delete"
            android:layout_alignParentRight="true" />


        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/TV_Texto"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


</RelativeLayout>
